<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InforActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" 제목 : "
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020시나공 정보처리기사 필기"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" 저자 : "
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/info_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="길벗알앤디"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" 출판사 : "
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/info_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="길벗알앤디"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" 위치 : "
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/info_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="군산대학교 도서관 2층"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" 등록 번호 : "
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/info_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc123df"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" 청구 기호 : "
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/info_claim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc123df"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" 상태 : "
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/info_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대출 가능"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#00cc00"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#999999"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/take_button"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:background="@drawable/button"
            android:text="대여하기"
            android:textSize="30dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/find_button"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:background="@drawable/button"
            android:text="도서 찾기"
            android:textSize="30dp"/>
    </LinearLayout>

</LinearLayout>